<Window x:Class="MagicPan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MagicPan"
        Title="魔盘" Height="300" Width="300" Style="{DynamicResource WindowStyle}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="True" Topmost="True" MouseEnter="Window_MouseEnter" MouseLeave="Window_MouseLeave">
    <Window.Resources>
        <Style TargetType="local:PanKey">
            <Setter Property="Template" Value="{DynamicResource Btn}"/>
        </Style>
        <ControlTemplate x:Key="Btn" TargetType="Button" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:s="clr-namespace:System;assembly=mscorlib" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
            <Grid Name="gd" Margin="2">
                <Border CornerRadius="5" Name="bg" Background="DimGray"/>
                <ContentPresenter Content="{TemplateBinding ContentControl.Content}" Name="ct" HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.FontSize="30" TextElement.Foreground="LightGray" />
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Border CornerRadius="5" Background="Gray" Margin="10,0,10,10" >
        <Grid>
            <Label x:Name="time" Content="" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="LightGray" Margin="0,-35,120,0" FontSize="12" ToolTip="耗时" />
            <Label Content="Go" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="LightGray" Margin="0,-35,15,0" FontSize="12" ToolTip="开始新的一局" MouseDown="Label_MouseDown"/>
            <Label Content="?" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="LightGray" Margin="0,-40,40,0" FontSize="20">
                <Label.ToolTip>
                    <Border CornerRadius="5" Background="Gray" Width="180" Height="180" >

                        <Grid Button.Click="gd_Click">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <local:PanKey Grid.Column="0" Grid.Row="0" Content="1"/>
                            <local:PanKey Grid.Column="1" Grid.Row="0" Content="2"/>
                            <local:PanKey Grid.Column="2" Grid.Row="0" Content="3"/>
                            <local:PanKey Grid.Column="3" Grid.Row="0" Content="4"/>

                            <local:PanKey Grid.Column="0" Grid.Row="1" Content="5"/>
                            <local:PanKey Grid.Column="1" Grid.Row="1" Content="6"/>
                            <local:PanKey Grid.Column="2" Grid.Row="1" Content="7"/>
                            <local:PanKey Grid.Column="3" Grid.Row="1" Content="8"/>

                            <local:PanKey Grid.Column="0" Grid.Row="2" Content="9"/>
                            <local:PanKey Grid.Column="1" Grid.Row="2" Content="10"/>
                            <local:PanKey Grid.Column="2" Grid.Row="2" Content="11"/>
                            <local:PanKey Grid.Column="3" Grid.Row="2" Content="12"/>

                            <local:PanKey Grid.Column="0" Grid.Row="3" Content="13"/>
                            <local:PanKey Grid.Column="1" Grid.Row="3" Content="14"/>
                            <local:PanKey Grid.Column="2" Grid.Row="3" Content="15"/>
                            <local:PanKey Grid.Column="3" Grid.Row="3" Content="16"/>

                        </Grid>
                    </Border>
                </Label.ToolTip>
            </Label>
            <Grid x:Name="gd" Button.Click="gd_Click">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

            </Grid>
        </Grid>
    </Border>
</Window>
